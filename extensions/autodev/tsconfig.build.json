{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["ES2021"],
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"rootDir": "./src",
		"outDir": "./out",
		"typeRoots": ["./node_modules/@types"],
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"declaration": false,
		"sourceMap": true
	},
	"include": [
		"src/extension/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
